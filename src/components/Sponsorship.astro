---
import { Image } from "astro:assets";
import TsukakenImage from "../../public/tsukaken.png";
import TeamtsukamotoImage from "../../public/teamtsukamoto.png";
---
<section class="bl_sponsorship">
    <h2 class="bl_sponsorship_title">
        <span class="bl_sponsorship_title_num">05</span> 主催
    </h2>
    <div class="bl_sponsorship_content">
        <div class="bl_sponsorship_contentItem">
            <Image
                    src={TsukakenImage}
                    alt=""
                    width="384"
                    height="64"
            />
            <p class="bl_sponsorship_contentItem_title">
                <a href="https://tt-lab.jp/" target="_blank">
                    神戸大学大学院工学研究科 塚本・寺田研究室
                </a>
            </p>
        </div>
        <div class="bl_sponsorship_contentItem">
            <Image
                    src={TeamtsukamotoImage}
                    alt=""
                    width="384"
                    height="64"
            />
            <p class="bl_sponsorship_contentItem_title">
                <a href="https://teamtsukamoto.sakura.ne.jp/" target="_blank">
                    NPO法人ウェアラブルコンピュータ研究開発機構（チームつかもと）
                </a>
            </p>
        </div>
    </div>
</section>

<style>
    .bl_sponsorship_title {
        font-size: 38px;
        margin-bottom: 80px;
    }

    .bl_sponsorship_title_num {
        background: #000;
        color: #fff;
        padding: 8px;
    }

    .bl_sponsorship_content {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
    }

    .bl_sponsorship_contentItem {
        display: grid;
        place-items: center;
    }

    .bl_sponsorship_contentItem_title {
        font-size: 24px;
    }
</style>