<header class="bl_header">
    <h1 class="bl_header_logo">UWW2025</h1>
    <nav>
        <ul class="bl_header_list">
            <li class="bl_header_listItem">
                <a href="/#top">TOP</a>
            </li>
            <li class="bl_header_listItem">
                Access
            </li>
        </ul>
    </nav>
</header>

<style>
    .bl_header {
        width: 100%;
        background-color: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(10px);
        color: #000;
        display: flex;
        justify-content: space-between;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 999;
        border-bottom: 1px solid #000;
    }

    .bl_header_logo {
        padding: 12px 32px;
        font-size: 28px;
    }

    .bl_header_list {
        padding: 12px 32px;
        display: flex;
        gap: 18px;
    }

    .bl_header_listItem {
        font-size: 28px;
        font-weight: bold;
        list-style: none;
        > a {
            color: #000;
            &:hover {
                opacity: 0.6;
            }
        }
    }
</style>