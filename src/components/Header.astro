<header class="bl_header">
    <h1 class="bl_header_logo">UWW2025</h1>

    <nav class="bl_header_navigation_pc js-header-navigation-pc">
        <ul class="bl_header_list">
            <li class="bl_header_listItem">
                <a href="/#top">
                    <span aria-hidden="true" translate="no" class="bl_header_linkWrap">
                        <span class="letter" style="--index: 0">T</span>
                        <span class="letter" style="--index: 1">O</span>
                        <span class="letter" style="--index: 2">P</span>
                    </span>
                    <span class="sr-only">TOP</span>
                </a>
            </li>
            <li class="bl_header_listItem">
                <a href="/#access">
                    <span aria-hidden="true" translate="no" class="bl_header_linkWrap">
                        {["A", "C", "C", "E", "S", "S"].map((char, i) => (
                            <span class="letter" style={{ "--index": i } as any}>
                                { char }
                            </span>
                        ))}
                    </span>
                    <span class="sr-only">ACCESS</span>
                </a>
            </li>
            <li class="bl_header_listItem">
                <a href="/#schedule">
                    <span aria-hidden="true" translate="no" class="bl_header_linkWrap">
                        {["S", "C", "H", "E", "D", "U", "L", "E"].map((char, i) => (
                                <span class="letter" style={{ "--index": i } as any}>
                                { char }
                            </span>
                        ))}
                    </span>
                    <span class="sr-only">SCHEDULE</span>
                </a>
            </li>
        </ul>
    </nav>

    <nav class="bl_header_navigation_sp js-header-navigation-sp">
        <button
                class="bl_header_hamburger js-hamburger"
                aria-label="menu"
                aria-expanded="false"
        >
            <span class="bl_header_hamburger_item"></span>
            <span class="bl_header_hamburger_item"></span>
            <span class="bl_header_hamburger_item"></span>
        </button>
        <div class="bl_header_drawer" id="sp-drawer" hidden>
            <ul class="bl_header_drawer_list">
                <li class="bl_header_drawer_list_item">
                    <a href="/#top">TOP</a>
                </li>
                <li class="bl_header_drawer_list_item">
                    <a href="/#access">ACCESS</a>
                </li>
                <li class="bl_header_drawer_list_item">
                    <a href="/#schedule">SCHEDULE</a>
                </li>
            </ul>
        </div>
    </nav>
</header>

<style>
    .bl_header {
        width: 100%;
        background-color: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(10px);
        color: #000;
        display: flex;
        justify-content: space-between;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 999;
        border-bottom: 1px solid #000;
    }

    .bl_header_logo {
        padding: 4px 24px;
        font-size: 20px;
    }

    .bl_header_list {
        padding: 4px 24px;
        display: flex;
        gap: 18px;
    }

    .bl_header_listItem {
        font-size: 20px;
        font-weight: bold;
        list-style: none;
    }

    .bl_header_linkWrap {
        display: flex;
        &:hover .letter {
            text-shadow: 0 0 0 #000, 0 1.5em 0 #000;
        }
    }

    .letter {
        overflow: hidden;
        color: transparent;
        text-shadow: 0 -1.5em 0 #000, 0 0 0 #000;
        transition: text-shadow 0.2s;
        transition-delay: calc(var(--index) * 0.05s);
    }

    .sr-only {
        position: absolute;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        width: 1px;
        height: 1px;
        margin: -1px;
        padding: 0;
        border-width: 0;
        white-space: nowrap;
    }

    .bl_header_hamburger {
        border: none;
        width: 32px;
        height: 23px;
        cursor: pointer;
        position: relative;
        background: none;
        top: 0;
        left: 0;
        z-index: 2;
    }


    .bl_header_navigation_sp {
        display: none;
    }


    @media (max-width: 540px) {
        .bl_header_navigation_pc {
            display: none;
        }
        .bl_header_listItem {
            display: none;
        }

        .bl_header_hamburger {
            display: block;
        }

        .bl_header_navigation_sp {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 24px;
        }

        .bl_header_hamburger_item {
            display: block;
            position: absolute;
            width: 32px;
            height: 1px;
            background: #000;
            top: calc(50% + 1px);
            transition: all 0.3s;
            &:nth-child(1) {
                translate: 0 11px;
            }
            &:nth-child(3) {
                translate: 0 -11px;
            }
        }

        .bl_header_hamburger.active .bl_header_hamburger_item {
            &:nth-child(1) {
                translate: 0 0;
                rotate: 45deg;
            }
            &:nth-child(2) {
                opacity: 0;
                rotate: 90deg;
            }
            &:nth-child(3) {
                translate: 0 0;
                rotate: -45deg;
            }
        }

        .bl_header_drawer {
            position: fixed;
            top: 56px;
            left: 0;
            right: 0;
            background-color: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid #000;
            transform: translateY(-8px);
            pointer-events: none;
            transition: all 0.25s;
        }

        .js-header-navigation-sp.active .bl_header_drawer {
            transform: translateY(0);
            opacity: 1;
            pointer-events: auto;
        }

        .bl_header_drawer_list {
            display: flex;
            flex-direction: column;
            list-style: none;
            gap: 18px;
        }

        .bl_header_drawer_list_item {
            font-size: 20px;
            a {
                color: #000;
                text-decoration: none;
            }
        }


    }

</style>

<script>
    const hamburgerButton = document.querySelector('.js-hamburger');
    const spNav = document.querySelector('.js-header-navigation-sp');
    const drawer = document.getElementById('sp-drawer');

    function toggleNavigation() {
        if (!hamburgerButton || !spNav) return;
        const isOpen = hamburgerButton.classList.toggle('active');
        spNav.classList.toggle('active', isOpen);
        hamburgerButton.setAttribute('aria-expanded', String(isOpen));
        if (drawer) drawer.hidden = !isOpen;
    }

    hamburgerButton.addEventListener('click', () => {
        toggleNavigation();
    });

    function isOpen() {
        return spNav.classList.contains('active');
    }

    document.addEventListener('click', (e) => {
        if (isOpen() && !spNav.contains(e.target)) {
            toggleNavigation();
        }
    });

    spNav.addEventListener('click', (e) => {
        const a = e.target.closest('a');
        if (!a) return;
        toggleNavigation();
    });

</script>